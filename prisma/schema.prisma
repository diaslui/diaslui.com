generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../src/generated/prismabox"
}

enum MediaType {
  IMAGE
  VIDEO
}

model Media {
  id        String    @id @default(uuid())
  type      MediaType
  url       String
  mimeType  String
  size      BigInt
  createdAt DateTime  @default(now())
  story     Story?    @relation(fields: [storyId], references: [id])
  storyId   String?
  posts     Post[]
}

model Tag {
  id     String  @id @default(cuid())
  name   String  @unique
  post   Post?   @relation(fields: [postId], references: [id])
  postId String?
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  displayName String
  username    String    @unique
  password    String
  posts       Post[]
  stories     Story[]
  createdAt   DateTime  @default(now())
  sessions    Session[]
}

model Session {
  id        String   @id
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Post {
  id        String   @id @default(uuid())
  title     String
  tags      Tag[]
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  thumbnail Media?   @relation(fields: [mediaId], references: [id])
  mediaId   String?
}

model Story {
  id        String   @id @default(uuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  medias    Media[]
}
